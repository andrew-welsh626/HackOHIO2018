<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity"
    tools:layout_editor_absoluteY="81dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tv_label_add_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/please_enter_the_name_of_the_option"
        app:layout_constraintBottom_toTopOf="@+id/et_add"
        app:layout_constraintEnd_toEndOf="@+id/et_add"
        app:layout_constraintStart_toStartOf="@+id/et_add"
        android:gravity="center"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_light_buttons"
        android:text="@string/add_option"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/et_add"
        app:layout_constraintStart_toStartOf="@+id/et_add"
        app:layout_constraintTop_toBottomOf="@+id/et_add" />

    <EditText
        android:id="@+id/et_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:width="240dp"
        android:inputType="textPersonName"
        android:shadowColor="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>