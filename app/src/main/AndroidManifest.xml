<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vote.hackohio.com.ezfunvoting">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="Add an option"
            android:parentActivityName=".VoteActivity"/>
        <activity android:name=".Results"
            android:label="View Results"
            android:parentActivityName=".VoteActivity"/>
        <activity
            android:name=".CreateActivity"
            android:label="Create a Room"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".JoinActivity"
            android:label="Join a Room"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".VoteActivity"
            android:label="@string/title_activity_vote"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>